{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,
    "paths": {
      "@src/*": ["src/*"],
      "mini-signals": [
        "node_modules/resource-loader/typings/mini-signals.d.ts"
      ]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}
